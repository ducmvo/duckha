{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"baseUrl": ".",
		"paths": {
			"@styles/*": ["src/styles/*"],
			"@styles": ["src/styles"],
			"@components/*": ["src/components/*"],
			"@components": ["src/components"],
			"@type/*": ["src/types/*"],
			"@type": ["src/types"],
			"@hooks/*": ["src/hooks/*"],
			"@hooks": ["src/hooks"],
			"@assets/*": ["src/assets/*"],
			"@assets": ["src/assets"]
		}
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules"]
}
