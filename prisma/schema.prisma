datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         Int      @id @default(autoincrement())
  email      String?
  name       String?
  phone      String?
  attend     Boolean?
  vip        Boolean?
  request    String?
  guestId    Int?
  guest      User?    @relation("GuestCompanions", fields: [guestId], references: [id])
  companions User[]   @relation("GuestCompanions")
}
